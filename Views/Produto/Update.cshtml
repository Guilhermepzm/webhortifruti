@model Produto


<form asp-controller="Produto" asp-action="Update" method="POST">
    <div style="display: flex; flex-direction: column;">
        <h2>Editar Produto</h2>

        <div class="form-group">
            <label asp-for="Nome">Nome</label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome"></span>
        </div>

        <div class="form-group">
            <label>Descrição</label>
            <input asp-for="Descricao" class="form-control" />
            <span asp-validation-for="Descricao"></span>
        </div>

        <div class="form-group">
            <label>Valor</label>
            <input asp-for="Valor" class="form-control" />
            <span asp-validation-for="Valor"></span>
        </div>

        <button style="align-self: flex-end;" class="btn button-green">Salvar</button>
    </div>
</form>