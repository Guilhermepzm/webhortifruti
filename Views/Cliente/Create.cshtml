@model Cliente

<form asp-controller="Cliente" asp-action="Create" method="post">
    <div style="display: flex; justify-content: center; align-items: center; margin-top: 260px;">
        <img src="~/assets/images/logo.png" width="400px" height="200px" style="position: absolute; top: 50px;" />
        <div style="width: 400px; height: 50%;">
            <div class="form-group">
                <label asp-for="Nome"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome"></span>
            </div>

            <div class="form-group">
                <label>Telefone</label>
                <input asp-for="Telefone" class="form-control" />
                <span asp-validation-for="Telefone"></span>
            </div>

            <div class="form-group">
                <label>Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email"></span>
            </div>

            <div class="form-group">
                <label asp-for="Senha"></label>
                <input asp-for="Senha" class="form-control" />
                <span asp-validation-for="Senha"></span>
            </div>

            <button class="btn btn-block button-green">Criar</button>

        </div>
    </div>
</form>